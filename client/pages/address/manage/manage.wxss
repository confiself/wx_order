/* pages/address/manage/manage.wxss */
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
}
.address-item{
  background: white;
  height: 120rpx;
  width:100%;
  padding-left: 50rpx; 
  position: relative;
  border-bottom: 1rpx dashed #c0c0c0
}
.address{
  position: absolute;
  left: 50rpx;
  top: 20rpx;
  font-size: 30rpx;
  align-content: left;
  width: 600rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.contact-info{
  position: absolute;
  left: 50rpx;
  bottom: 0rpx;
  font-size: 30rpx;
  align-content: left
}
.delete{
  height:40rpx;
  width:40rpx;
  position: absolute;
  right: 100rpx;
  bottom: 30rpx;
}
.add-view{
  margin-top: 100rpx; 
  height: 80rpx;
  width: 100%;
  background: #FFBE00;
  align-items: center;
  line-height: 80rpx;
  font-size: 40rpx;
  color: white;
  text-align: center;
}