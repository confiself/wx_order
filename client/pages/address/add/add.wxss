/* pages/address/add/add.wxss */
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
}
.title-view{
  padding-left: 50rpx;
  align-items: left;
  width: 100%;
  padding-bottom: 30rpx;
  padding-top: 30rpx;  
}
.title-view text{
  font-size: 50rpx;
  color: black;
}
.info-view{
  background: white;
  padding-left: 50rpx;
  width: 100%; 
  display: flex;
  flex-direction: column;
}
.info-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50rpx;
  width: 100%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 30rpx;
}
.info-item input{
  margin-left: 30rpx;
  width: 450rpx;
}
.info-item text{
  width: 150rpx;
}
.line{
  height: 1rpx;
  width: 100%;
  background: #F6F6F6
}
.map{
  width: 40rpx;
  height: 40rpx;
}
.save-view{
  margin-top: 100rpx; 
  height: 80rpx;
  width: 100%;
  background: #FFBE00;
  align-items: center;
  line-height: 80rpx;
  font-size: 40rpx;
  color: white;
  text-align: center;

}
.error-hint{
  margin-top: 30rpx;
  height: 30rpx;
  width:100%;
  align-items: center;
  text-align: center;
  color: red;
  font-size: 30rpx; 
}